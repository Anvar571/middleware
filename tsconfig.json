{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "module": "CommonJS",
    "baseUrl": "./src",
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
